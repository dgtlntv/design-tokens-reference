{
    "basePaths": {
        "sites": {
            "primitive": "./tokens/canonical/sites/primitive/**/*.tokens.json",
            "semantic": "./tokens/canonical/sites/semantic/**/*.tokens.json"
        },
        "docs": {
            "semantic": "./tokens/canonical/docs/semantic/**/*.tokens.json"
        },
        "apps": {}
    },
    "tiers": {
        "sites": {
            "name": "sites",
            "description": "Base design system tokens for sites",
            "include": [],
            "source": ["sites.primitive", "sites.semantic"]
        },
        "docs": {
            "name": "docs",
            "description": "Documentation site tokens (inherits sites primitives, adds docs semantic)",
            "include": ["sites.primitive", "sites.semantic"],
            "source": ["docs.semantic"]
        },
        "apps": {
            "name": "apps",
            "description": "Application tokens (currently inherits from sites)",
            "include": [],
            "source": ["sites.primitive", "sites.semantic"]
        }
    }
}
